@article{ingargiola_multispot_2017,
	title = {Multispot single-molecule {FRET}: {High}-throughput analysis of freely diffusing molecules},
	volume = {12},
	issn = {1932-6203},
	shorttitle = {Multispot single-molecule {FRET}},
	url = {http://journals.plos.org/plosone/article?id=10.1371/journal.pone.0175766},
	doi = {10.1371/journal.pone.0175766},
	abstract = {We describe an 8-spot confocal setup for high-throughput smFRET assays and illustrate its performance with two characteristic experiments. First, measurements on a series of freely diffusing doubly-labeled dsDNA samples allow us to demonstrate that data acquired in multiple spots in parallel can be properly corrected and result in measured sample characteristics consistent with those obtained with a standard single-spot setup. We then take advantage of the higher throughput provided by parallel acquisition to address an outstanding question about the kinetics of the initial steps of bacterial RNA transcription. Our real-time kinetic analysis of promoter escape by bacterial RNA polymerase confirms results obtained by a more indirect route, shedding additional light on the initial steps of transcription. Finally, we discuss the advantages of our multispot setup, while pointing potential limitations of the current single laser excitation design, as well as analysis challenges and their solutions.},
	number = {4},
	urldate = {2017-04-18},
	journal = {PLOS ONE},
	author = {Ingargiola, Antonino and Lerner, Eitan and Chung, SangYoon and Panzeri, Francesco and Gulinatti, Angelo and Rech, Ivan and Ghioni, Massimo and Weiss, Shimon and Michalet, Xavier},
	month = apr,
	year = {2017},
	pmcid = {PMC5395192},
